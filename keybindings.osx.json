// Place your key bindings in this file to overwrite the defaults
[
  {
    "key": "cmd+shift+d",
    "command": "cursorColumnSelectDown",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+shift+r",
    "command": "cursorColumnSelectUp",
    "when": "textInputFocus"
  },
  // { "key": "option+cmd+up",           "command": "editor.action.moveLinesUpAction",
  //   "when": "editorTextFocus" },
  // { "key": "option+cmd+down",         "command": "editor.action.moveLinesDownAction",
  //   "when": "editorTextFocus"
  // },
  {
    "key": "cmd+t",
    "command": "editor.action.transpose"
  },
  {
    "key": "cmd+shift+/",
    "when": "editorTextFocus",
    "command": "editor.emmet.action.toggleComment"
  },
  {
    "key": "cmd+b",
    "command": "workbench.action.tasks.build"
  },
  {
    "key": "cmd+k cmd+o",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "shift+cmd+g",
    "command": "editor.emmet.action.wrapWithAbbreviation",
    "when": "editorFocus"
  },
  {
    "key": "shift+enter",
    "command": "-python.execSelectionInTerminal",
    "when": "editorFocus && !findInputFocussed && !python.datascience.hascodecells && !replaceInputFocussed && editorLangId == 'python'"
  },
  {
    "key": "cmd+.",
    "command": "editor.emmet.action.matchTag"
  },
  {
    "key": "cmd+y",
    "command": "redo",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "cmd+g",
    "command": "workbench.action.gotoLine"
  },
  {
    "key": "alt+up",
    "command": "editor.emmet.action.incrementNumberByOne"
  },
  {
    "key": "alt+down",
    "command": "editor.emmet.action.decrementNumberByOne"
  },
  {
    "key": "cmd+shift+down",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+shift+up",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+cmd+right",
    "command": "cursorWordEndRightSelect",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+cmd+left",
    "command": "cursorWordEndLeftSelect",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+cmd+f",
    "command": "editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
  },

  { "key": "cmd+end", "command": "cursorEnd", "when": "textInputFocus" },
  { "key": "cmd+home", "command": "cursorHome", "when": "textInputFocus" },

  {
    "key": "ctrl+backspace",
    "command": "deleteWordLeft",
    "when": "textInputFocus && !editorReadonly"
  },

  {
    "key": "ctrl+backspace",
    "command": "deleteWordLeft",
    "when": "textInputFocus && !editorReadonly"
  },

  {
    "key": "ctrl+backspace",
    "command": "deleteWordLeft",
    "when": "textInputFocus && !editorReadonly"
  },

  {
    "key": "ctrl+right",
    "command": "cursorWordEndRight",
    "when": "textInputFocus"
  },

  {
    "key": "ctrl+left",
    "command": "cursorWordEndLeft",
    "when": "textInputFocus"
  },

  {
    "key": "shift+ctrl+left",
    "command": "cursorWordLeftSelect",
    "when": "textInputFocus"
  },
  {
    "key": "shift+ctrl+right",
    "command": "cursorWordEndRightSelect",
    "when": "textInputFocus"
  }

  // {
  //   "key": "option+shift+down",
  //   "command": "editor.emmet.action.decrementNumberByOne"
  // },
  // {
  //   "key": "option+shift+g",
  //   "command": "editor.emmet.action.incrementNumberByOne"
  // },
]
